<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nombreCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Albacete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/descripcionCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mucha feria no se"
        app:layout_constraintStart_toStartOf="@+id/nombreCiudad"
        tools:layout_editor_absoluteY="47dp" />

    <ImageView
        android:id="@+id/imgCiudad"
        android:layout_width="225dp"
        android:layout_height="137dp"
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toEndOf="@+id/descripcionCiudad"
        app:srcCompat="@drawable/albacete"
        tools:layout_editor_absoluteY="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>